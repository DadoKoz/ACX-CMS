generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  password          String
  createdAt         DateTime @default(now())
  isVerified        Boolean  @default(false)
  verificationToken String?  @unique
}

model Post {
  id              String    @id @default(cuid())
  slug            String    @unique
  title           String
  subtitle        String?
  summary         String?
  image           String?
  gallery         String[]  @default([])
  videoUrl        String?
  author          String?
  source          String?
  category        String?
  tags            String[]  @default([])
  metaTitle       String?
  metaDescription String?
  status          String?   @default("draft")
  publishDate     DateTime?
  readingTime     Int?
  contentHtml     String?
  contentCss      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Promotion {
  id           String   @id @default(cuid())
  image        String
  title        String
  description  String
  status       String
  activeStatus String   // "Active" | "Upcoming" | "Closed"
  content      Json     // ovdje ide niz ContentBlock[] u JSON formatu
  dateActive   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}






model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  createdAt DateTime @default(now())
  expiredAt DateTime
}
